{
  "manifest_version": 3,
  "name": "Word Chad",
  "version": "0.2.1",
  "action":{
    "default_popup": "index.html"
  },
  "description": "This is a simple chrome extension that can automatically look up words.", 
  "author": "chaseuelt@gmail.com",
  "host_permissions":[
    "http://*/*",
    "https://*/*"
  ],
  "permissions":[
    "scripting",
    "activeTab"
  ],
  "icons":{
    "16":"wordchad.png",
    "32":"wordchad.png",
    "48":"wordchad.png",
    "128": "wordchad.png"
  }
}
